<div id="header_inferior">
    {% if app.user %}
        <div id="login">
            <strong>{{ app.user.nombre }}</strong> ({{ app.user.organizacion }}) |
            <a href="{{ path('app_logout') }}">{{ 'usuario.login.salir' | trans }}</a> |
            <a href="{{ path('usuario_perfil') }}">{{ 'usuario.login.perfil' | trans }}</a>
        </div>
    {% else %}
        <div id="login">
            <a href="{{ path('app_login') }}">{{ 'usuario.login.acceder' | trans }}</a>
        </div>
    {% endif %}
</div>

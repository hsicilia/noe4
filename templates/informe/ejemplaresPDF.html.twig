<html lang="es">
<head>
    <title>Informe de Ejemplares</title>
	<meta charset="utf-8">
    <style>
        body {
            font-size:12pt;
        }
        div.elemento {
            margin: 1cm;
            overflow: hidden;
            break-inside: avoid-page;
            page-break-after: always;
            padding: 0;
        }
        h1 {
            background-color: #555;
            color: white;
            font-weight: bold;
            font-size: 1.3rem;
            padding: 0.2cm 1cm;
        }
        h1 span.id {
            background-color: #e9e9e9;
            color: #555;
            font-size: 1.5rem;
            margin-left: 0.5cm;
            padding: 0 0.5cm;
        }
        table {
            width: 95%;
            margin: 0.5cm 0 0 1cm;
            border-collapse: collapse;
            border-spacing: 0;
            border: 1px solid #ddd;
        }
        table tr:nth-child(even) {
            background-color: #f2f2f2
        }
        table td {
            padding: 2mm;
        }
        table tr>td:first-child {
            font-weight: bold;
            width: 7cm;
        }
</style>
</head>
<body>
    {% for ejemplar in ejemplares %}
        <div class="elemento">
            <h1>
                <span>Ejemplar </span><span class="id">{{ ejemplar.id }}</span>
            </h1>
            <table class="datos">
                <tr>
                    <td>{{ 'ejemplar.campo.fechaRegistro' | trans }}</td>
                    <td>{% if ejemplar.fechaRegistro is not null %}{{ ejemplar.fechaRegistro | date("d/m/Y") }}{% endif %}</td>
                </tr>
                {% if ejemplar.fechaBaja is not null %}
                <tr style="border-top: 1px solid black"><td>{{ 'ejemplar.campo.fechaBaja' | trans }}</td><td>{{ ejemplar.fechaBaja | date("d/m/Y") }}</td></tr>
                <tr style="border-bottom: 1px solid black"><td>{{ 'ejemplar.campo.causaBaja' | trans }}</td><td>{{ ejemplar.causaBaja | causaBaja | trans }}</td></tr>
                {% endif %}
                <tr><td>{{ 'ejemplar.campo.especie' | trans }}</td><td>{{ ejemplar.especie | nombreEspecie | raw }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.especieComun' | trans }}</td><td>{{ ejemplar.especie.comun }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.idMicrochip' | trans }}</td><td>{{ ejemplar.idMicrochip }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.idAnilla' | trans }}</td><td>{{ ejemplar.idAnilla }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.idOtro' | trans }}</td><td>{{ ejemplar.idOtro }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.idOtro2' | trans }}</td><td>{{ ejemplar.idOtro2 }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.sexo' | trans }}</td><td>{{ ejemplar.sexo | sexo | trans }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.recinto' | trans }}</td><td>{{ ejemplar.recinto }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.lugar' | trans }}</td><td>{{ ejemplar.lugar }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.geoLong' | trans }}</td><td>{{ ejemplar.geoLong }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.geoLat' | trans }}</td><td>{{ ejemplar.geoLat }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.origen' | trans }}</td><td>{{ ejemplar.origen | origen | trans }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.documentacion' | trans }}</td><td>{{ ejemplar.documentacion | documentacion | trans }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.progenitor1' | trans }}</td><td>{{ ejemplar.progenitor1 }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.progenitor2' | trans }}</td><td>{{ ejemplar.progenitor2 }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.depositoNombre' | trans }}</td><td>{{ ejemplar.depositoNombre }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.depositoDNI' | trans }}</td><td>{{ ejemplar.depositoDNI }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.deposito' | trans }}</td><td>{{ ejemplar.deposito | raw }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.invasora' | trans }} <em>{{ 'ejemplar.campo.invasora_RD' | trans }}</em></td><td>{{ ejemplar.invasora | sino | trans }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.peligroso' | trans }} <em>{{ 'ejemplar.campo.peligroso_RD' | trans }}</em></td><td>{{ ejemplar.peligroso | sino | trans }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.cites' | trans }}</td><td>{{ ejemplar.cites | cites | trans }}</td></tr>
                <tr><td>{{ 'ejemplar.campo.observaciones' | trans }}</td><td>{{ ejemplar.observaciones | raw }}</td></tr>
            </table>
        </div>
    {% endfor %}
</body>
</html>
